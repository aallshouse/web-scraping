doctype html
html(lang="en")
    head
        title= pageTitle
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    body
        - var currentPage = parseInt(page);
        - currentPage = currentPage === 0 ? 1 : currentPage;
        h3.col-md-4 Recent transactions
        table.table.table-striped
            thead
                tr
                    th Description
                    th Amount
                    th Date
                    th &nbsp;
            tbody
                each trans in transactions
                    tr
                        td
                            a(href='/transactions/' + trans.id + '?page=#{currentPage}')= trans.description
                        td= trans.amount
                        td= trans.transactiondate
                        td
                            form(action='/transactions/delete', method='POST')
                                input(type='hidden', name='id', value="#{trans.id}")
                                button.btn.btn-danger.btn-sm(type='submit') Delete
        - var nextPage = currentPage + 1;
        - var prevPage = currentPage - 1;
        - prevPage = prevPage < 0 ? 1 : prevPage;
        a.col-md-4(href='/transactions/view?page=#{prevPage}') View Previous Page
        a.col-md-4(href='/transactions/view?page=#{nextPage}') View Next Page
        a(href='/transactions?page=#{currentPage}') Add Transaction
        script(src='/js/jquery.min.js')
        script(src='/js/bootstrap.min.js')