doctype html
html(lang="en")
    head
        title= pageTitle
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/css/styles.css')
    body
        ul.nav.nav-pills
            li: a(href='/transactions/view') View
            li: a(href='/transactions/search') Search
            li.active: a(href='#') Add/Edit
            li: a(href='/credit') Credit Cards
        .container
            .row
                .col-md-6.col-md-offset-3
                    .panel.panel-primary
                        .panel-heading
                            h4 Enter transaction details
                        .panel-body
                            form(action='/transactions', method='POST')
                                .form-group
                                    label Transaction Id
                                    .input-group
                                        input.form-control(type='text', name='id', value="#{transaction ? transaction.id : ''}")
                                        span.input-group-btn
                                            btn.btn.btn-info Find
                                .form-group
                                    label Description
                                    input#transactionDescription.form-control(type='text', name='description', value="#{transaction ? transaction.description : ''}")
                                .form-group
                                    label Amount
                                    input#transactionAmount.form-control(type='text', name='amount', value="#{transaction ? transaction.amount : ''}")
                                .form-group
                                    label Date
                                    input#transactionDate.form-control(type='text', name='date', value="#{transaction ? transaction.transactiondate : ''}")
                                .form-group
                                    label Category
                                    input#transactionCategory.form-control(type='text', name='category', value="#{transaction ? transaction.category : ''}")
                                .form-group
                                    label Recurring Bill?
                                    input#transactionIsBill.form-control(type='text', name='isbill', value="#{transaction ? transaction.isbill : ''}")
                                .checkbox
                                    input.no-left-margin(type="checkbox", name='notprocessed', checked=transaction && transaction.notprocessed)
                                    label Not Processed?
                                input(type='hidden', name='page', value="#{page}")
                                button(type='submit', class='btn btn-lg btn-success') Submit
        script(src='/js/jquery.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/findTransaction.js')